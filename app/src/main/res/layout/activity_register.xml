<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->

    <include layout="@layout/layout_titlebar" android:id="@+id/fragment_title2"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fragment_title2"
        >

        <EditText
            android:layout_width="250dp"
            android:layout_marginLeft="100dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginTop="21dp"
            android:id="@+id/editText4"
            android:hint="密码:"
            android:layout_below="@+id/editText3"
            android:background="@drawable/shape_regeitetext"
            android:textSize="15dp"
           />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_marginLeft="100dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/editText5"
            android:layout_marginTop="20dp"
            android:id="@+id/linearLayout_register"
            >

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:hint="验证码:"
                android:layout_below="@+id/editText3"
                android:background="@drawable/shape_regeitetext"
                android:textSize="15dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="获取验证码"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_regei_button"
                android:textColor="@color/ColorWhiteColor"
                android:ems="10"
                android:textSize="15dp"
                android:onClick="getVerCodeClick"

                />

        </LinearLayout>

        <Button
            android:text="注册"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/linearLayout_register"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:id="@+id/button_register"
            android:background="@drawable/shape_regei_button"
            android:textColor="@color/ColorWhiteColor"
            android:onClick="register"


            />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginTop="12dp"
            android:id="@+id/editText5"
            android:hint="确认密码:"
            android:background="@drawable/shape_regeitetext"
            android:layout_below="@+id/editText4"
            android:layout_alignLeft="@+id/editText4"
            android:layout_alignStart="@+id/editText4"
            android:textSize="15dp"
            />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginTop="60dp"
            android:id="@+id/editText3"
            android:hint="手机号："
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/editText4"
            android:layout_alignStart="@+id/editText4"
            android:background="@drawable/shape_regeitetext"
            android:textSize="15dp"
            />


    </RelativeLayout>


</RelativeLayout>